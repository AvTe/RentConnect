rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Check if user is admin (requires reading the user doc)
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Collection: users (The Agents & Tenants)
    match /users/{userId} {
      // Allow read for everyone to enable phone number uniqueness check during signup
      // In production, consider using a Cloud Function or Admin SDK for this check to improve security
      allow read: if true;
      // Users can write their own data; Admins can write any user data
      allow write: if isOwner(userId) || isAdmin();
    }

    // Collection: requests (The Leads) - PUBLIC READ for active leads (carousel)
    match /requests/{requestId} {
      // ALLOW PUBLIC READ for carousel display
      allow read: if true;
      // Anyone can create a lead
      allow create: if true;
      // Only the tenant who created the lead can update/delete
      allow update, delete: if isAuthenticated() && 
        resource.data.tenant_info.id == request.auth.uid;
    }
    
    // Collection: properties
    match /properties/{propertyId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Collection: transactions
    match /transactions/{transactionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
    }
    
    // Collection: subscriptions
    match /subscriptions/{subscriptionId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Collection: credit_bundles
    match /credit_bundles/{bundleId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Collection: support_tickets
    match /support_tickets/{ticketId} {
      allow read, write: if isAuthenticated();
    }
    
    // Collection: notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Catch-all for other collections during development
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
