rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions (same as storage.rules)
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Collection: users (The Agents & Tenants) - PATTERN FROM STORAGE.RULES
    match /users/{userId} {
      // Anyone can read users (like storage.rules allows read for profiles)
      allow read: if true;
      // Users can write their own data; Admins can write any user data
      allow write: if isOwner(userId) || isAdmin();
    }

    // Collection: requests (The Leads) - PATTERN FROM STORAGE.RULES (PUBLIC READ)
    match /requests/{requestId} {
      // Anyone can read requests (like storage.rules: allow read: if true; for properties)
      allow read: if true;
      // Anyone can create a lead
      allow create: if true;
      // Only the tenant who created the lead can update/delete
      allow update, delete: if isAuthenticated() && 
        resource.data.tenant_info.id == request.auth.uid;
    }
    
    // Collection: properties - PATTERN FROM STORAGE.RULES
    match /properties/{propertyId} {
      // Anyone can read properties (like storage.rules allows public read)
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Collection: transactions
    match /transactions/{transactionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
    }
    
    // Collection: subscriptions
    match /subscriptions/{subscriptionId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Collection: credit_bundles - PATTERN FROM STORAGE.RULES
    match /credit_bundles/{bundleId} {
      // Anyone can read credit bundles (like storage.rules: allow read: if true;)
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Collection: support_tickets
    match /support_tickets/{ticketId} {
      allow read, write: if isAuthenticated();
    }
    
    // Collection: notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Catch-all for other collections during development
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
