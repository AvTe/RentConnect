# Supabase Configuration (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# Service Role Key - Required for admin operations like generating password reset links
# Find this in Supabase Dashboard > Settings > API > service_role key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# App URL (used for redirects)
NEXT_PUBLIC_SITE_URL=http://localhost:5000
NEXT_PUBLIC_APP_URL=http://localhost:5000

# ============================================
# Pesapal Payment Gateway Configuration (Kenya)
# Documentation: https://developer.pesapal.com/how-to-integrate/e-commerce/api-30-json/
# ============================================
PESAPAL_CONSUMER_KEY=your_pesapal_consumer_key
PESAPAL_CONSUMER_SECRET=your_pesapal_consumer_secret
# Environment: 'sandbox' for testing, 'production' for live payments
PESAPAL_ENV=sandbox
# IPN ID - Get this by calling POST /api/pesapal/register-ipn with your IPN URL
PESAPAL_IPN_ID=your_ipn_id_here

# PostgreSQL Database URL for payment tracking
# Get this from Supabase Dashboard > Settings > Database > Connection string (URI)
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-eu-central-1.pooler.supabase.com:6543/postgres

# Email Service
# NOTE: Emails are now handled by Supabase Auth's built-in email system.
# Configure email templates in Supabase Dashboard > Authentication > Email Templates
# For custom SMTP, configure in Supabase Dashboard > Settings > Auth > SMTP Settings

# ============================================
# Africa's Talking SMS Configuration
# Documentation: https://developers.africastalking.com/docs/sms/overview
# Dashboard: https://account.africastalking.com
# ============================================
# Get your API key from Africa's Talking Dashboard > Settings > API Key
AT_API_KEY=your_africastalking_api_key
# Your Africa's Talking username (use 'sandbox' for testing)
AT_USERNAME=sandbox
# Set to 'true' for sandbox testing, 'false' for live production
AT_USE_SANDBOX=true
# Optional: Sender ID (alphanumeric, max 11 chars) - requires approval for live
# AT_SENDER_ID=RENTCONNECT

# ============================================
# DEPRECATED: AuthKey (Replaced by Africa's Talking)
# AuthKey was deprecated due to Sender ID issues for Kenya
# ============================================
# AUTHKEY_API_KEY=your_authkey_api_key
# AUTHKEY_SENDER_ID=RENTCO
# AUTHKEY_DEFAULT_COUNTRY_CODE=91
# AUTHKEY_DLT_ENTITY_ID=your_dlt_entity_id
# AUTHKEY_DLT_TEMPLATE_ID=your_dlt_template_id

# ============================================
# DEPRECATED: Twilio (Replaced by Africa's Talking)
# ============================================
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_phone_number
# TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Google Cloud (reCAPTCHA & Maps)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Persona Identity Verification (withpersona.com)
# Required for agent identity verification
# Get these from your Persona Dashboard: https://app.withpersona.com/
NEXT_PUBLIC_PERSONA_TEMPLATE_ID=itmpl_your_template_id_here
NEXT_PUBLIC_PERSONA_ENVIRONMENT_ID=env_your_environment_id_here
PERSONA_API_KEY=persona_sandbox_your_api_key_here
